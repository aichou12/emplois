    <script>
        // Fonction pour passer à l'étape suivante
        function nextStep(step) {
            document.querySelector(`#step-${step-1}`).style.display = 'none'; // Cacher l'étape précédente
            document.querySelector(`#step-${step}`).style.display = 'block'; // Afficher l'étape suivante
        }

        // Fonction pour revenir à l'étape précédente
        function prevStep(step) {
            document.querySelector(`#step-${step+1}`).style.display = 'none'; // Cacher l'étape suivante
            document.querySelector(`#step-${step}`).style.display = 'block'; // Afficher l'étape précédente
        }
    </script>